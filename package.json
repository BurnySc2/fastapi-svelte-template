{
	"private": true,
	"scripts": {
		"build:dev:tailwind": "DEVELOPMENT=true tailwind build -i public/tailwind.css -o public/index.css",
		"build:prod:tailwind": "NODE_ENV=production postcss public/tailwind.css -o public/index.css",
		"build": "npm run build:prod:tailwind && cross-env NODE_ENV=production webpack",
		"dev": "npm run build:dev:tailwind && webpack serve",
		"start": "serve public --listen 8080",
		"validate": "svelte-check"
	},
