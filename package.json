{
    "private": true,
    "scripts": {
        "tailwind:dev": "DEVELOPMENT=true tailwind build -i public/tailwind.css -o public/index.css -w",
        "tailwind:prod": "NODE_ENV=production tailwind build -i public/tailwind.css -c tailwind.config.js -o public/index.css",
        "build": "npm run eslint && npm run tailwind:prod && cross-env NODE_ENV=production webpack",
        "dev": "concurrently \"webpack serve\" && \"npm run tailwind:dev\"",
        "start": "serve public --listen 8080",
        "validate": "svelte-check",
        "eslint": "npx eslint **/*.svelte --max-warnings 0"
    },
    "browserslist": [
        "defaults"
    ],
    "dependencies": {
        "@babel/core": "^7.14.6",
        "@babel/plugin-transform-runtime": "^7.14.5",
        "@babel/preset-env": "^7.14.7",
        "@babel/runtime": "^7.14.6",
        "@types/css-minimizer-webpack-plugin": "^3.0.1",
        "@types/mini-css-extract-plugin": "^1.4.3",
        "@types/webpack-dev-server": "^3.11.4",
        "autoprefixer": "^10.2.6",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^3.0.0",
        "concurrently": "^6.2.0",
        "core-js": "^3.15.1",
        "cross-env": "^7.0.3",
        "css-loader": "^5.2.6",
        "css-minimizer-webpack-plugin": "^3.0.1",
        "mini-css-extract-plugin": "^1.6.0",
        "serve": "^12.0.0",
        "svelte": "^3.38.3",
        "svelte-check": "^2.2.0",
        "svelte-loader": "^3.1.2",
        "svelte-preprocess": "^4.7.3",
        "tailwindcss": "^2.2.4",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.4",
        "webpack": "^5.40.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "eslint": "^7.29.0",
        "eslint-plugin-svelte3": "^3.2.0",
        "prettier": "^2.3.1",
        "prettier-plugin-svelte": "^2.3.1"
    }
}
